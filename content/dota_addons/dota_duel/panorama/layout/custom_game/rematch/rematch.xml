<root>

	<styles>
		<include src="file://{resources}/styles/custom_game/rematch/rematch.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/rematch/rematch.js" />
	</scripts>

	<snippets>

		<snippet name="PlayerRematch">

			<Panel class="PlayerRematch">

				<Panel class="PlayerRematchLeft" id="PlayerRematchLeft">

					<Label id="PlayerName" text="" />

				</Panel>

				<Panel class="PlayerRematchRight">

					<Panel class="RematchImage">

						<Image id="RematchImage" src="file://{images}/custom_game/general/checkmark.png" />

					</Panel>

				</Panel>

			</Panel>

		</snippet>

	</snippets>

	<Panel class="RootRematch" hittest="false">

		<Panel class="Rematch" id="Rematch">

			<Panel class="RematchTop">

				<Label id="RematchLabel" text="#duel_rematch_time_remaining" />

			</Panel>

			<Panel class="LeftSide">

				<Panel id="Players">

				</Panel>

			</Panel>

			<Panel class="RightSide">

				<Button class="RematchButton" id="RematchButton" onactivate="VoteRematch()">

					<Label id="RematchButtonLabel" text="#duel_vote_rematch" />

				</Button>

			</Panel>

		</Panel>

	</Panel>

</root>